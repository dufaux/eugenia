<HTML>
<head>
<meta charset="UTF-8">
<style>
h1{
border: 1px solid black;
margin: 100px 200px 10px;
text-align: center;
}

p{
margin: 100px 200px 10px;
text-align: center;
}

ul{
margin: 100px 200px 10px;
text-align: center;
list-style-type: none;
}

a{
color: #000000 ;
text-decoration: none;
font-size: 150%;
font-family: "Times New Roman", Times, serif;

}
a:hover {
  color: #000099 ;
  text-decoration: underline ;
}

form{
  text-align: center;
}

img{
  display: block;
  margin: auto;
}

.bouton{
  width: 200px;
  height: 50px;
  font-size: 25px;
}

</style>
</head>
<BODY>

<h1>[%=question.question%] </h1>

<form action="[%=nettoyer_id(question.ReponseBooleanOui.id)%].html">
    <input class="bouton" type="submit" value="Oui">
</form>
<form action="[%=nettoyer_id(question.ReponseBooleanNon.id)%].html">
    <input class="bouton" type="submit" value="Non">
</form>

[% if(question.photo.isDefined()){  %]
    <img src="[%=question.photo.path%]" />
[% } %]
<p>
<a href="index.html">retour Ã  l'accueil </a>
</p>
</BODY>
</HTML>

[%

operation nettoyer_id(id : String) : String {
    return id.replace("@","").replace("/","").replace("\\.","");
}


%]